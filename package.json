	"scripts": {
		"test": "clear & NODE_ENV=test jest --silent",
		"testw": "clear & NODE_ENV=test jest",
		"next:build": "NODE_ENV=development next build client",
		"server:build": "NODE_ENV=server babel server -d build/dist",
		"server": "NODE_ENV=test babel-node server/index ",
		"prebuild": "rm -rf build/*",
		"build": "npm run next:build & npm run server:build",
		"start": "NODE_ENV=production node build/dist/index",
		"debug": "node --nolazy --debug-brk=3000 server/index.js",
		"run:test": "run-batch",
		"testgql": "NODE_ENV=test babel-node ./server/db/__graphQL__/",
		"testdb": "NODE_ENV=test babel-node ./server/db/__mongoDB__/"
	},
	"run-batch": {
		"run:test": [
			"testql",
			"testdb"
		]
	},
	"dependencies": {
		"apollo-cache-inmemory": "^1.1.3",
