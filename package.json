		"react": "^16.2.0",
		"react-apollo": "^2.0.1",
		"react-display-name": "^0.2.3",
		"react-dom": "^16.2.0",
		"styled-components": "^2.2.4"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.0.3",
		"babel-jest": "^21.2.0",
		"babel-minify": "^0.2.0",
